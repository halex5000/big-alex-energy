# Validate commit message format
npx --no -- commitlint --edit $1

if [ $? -ne 0 ]; then
  echo "âŒ Commit message validation failed!"
  echo "ğŸ’¡ Use conventional commit format: type(scope): description"
  echo "   Examples:"
  echo "   - feat: add new carousel feature"
  echo "   - fix: resolve mobile layout issue"
  echo "   - docs: update testing documentation"
  echo "   - test: add carousel navigation tests"
  exit 1
fi

echo "âœ… Commit message is valid!"
